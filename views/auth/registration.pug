extends ../layout

include ../mixins/error

append stylesheets 
	link(rel="stylesheet", href="/stylesheets/auth/registration.css")

append scripts 
	script(type="text/javascript", src="/javascripts/auth/registration.js", defer)

block content 
	div
		h1 Register
		p.tGray If you already have an account, #[a(href="/login") log in].

	form(method="post").Flexbox.mCol.mCmpSpacing 
		div
			label(for="UsernameField") #[b Username] #[+Error(errors, "username")]
			input#UsernameField(type="text", name="username")

		div
			label(for="PasswordField") #[b Password] #[+Error(errors, "password")]
			input#PasswordField(type="password", name="password")

		div
			label(for="ConfirmField") #[b Confirm Password] #[+Error(errors, "confirm")]
			input#ConfirmField(type="password", name="confirm")

		div
			label(for="CaptchaField") #[b Captcha] #[+Error(errors, "captcha")]
			input#CaptchaField(type="text", name="captcha")

		input#CaptchaQuestion(type="hidden", name="captchaQuestion")

		button(type="submit").iAlignRight Register