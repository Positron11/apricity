extends ../layout

include ../mixins/error

append scripts 
	script(type="text/javascript", src="/javascripts/forms.js", defer)

block content 
	div
		h1 Log In
		p.tGray If haven't already created an account, #[a(href="/register") register].

	form(method="post").Flexbox.mCol.mCmpSpacing 
		div
			label(for="UsernameField") 
				b Username
				if error
					span.tSmall.tRed: b &nbsp; #[u /!\] Incorrect username...
			input#UsernameField(type="text", name="username")

		div
			label(for="PasswordField") 
				b Password
				if error
					span.tSmall.tRed: b &nbsp; #[u /!\] ...or password
			input#PasswordField(type="password", name="password")

		button(type="submit").iAlignRight Log In